{
  "confidence": {
    "minimum": "medium",
    "autoApply": "high",
    "requireConfirmation": "low"
  },
  "bugTypes": {
    "memoryLeaks": {
      "enabled": true,
      "priority": "high",
      "patterns": ["event-listeners", "intervals", "observers", "subscriptions"],
      "autoFix": true,
      "strategies": ["cleanup-functions", "weak-references", "auto-unsubscribe"]
    },
    "nullPointers": {
      "enabled": true,
      "priority": "high",
      "addGuards": true,
      "defaultValues": true,
      "optionalChaining": true,
      "nullishCoalescing": true
    },
    "raceConditions": {
      "enabled": true,
      "priority": "medium",
      "addLocking": true,
      "retryLogic": true,
      "optimisticLocking": true,
      "queueOperations": false
    },
    "infiniteLoops": {
      "enabled": true,
      "priority": "high",
      "maxIterations": 10000,
      "stackProtection": true,
      "timeoutProtection": true,
      "recursionLimit": 1000
    },
    "asyncIssues": {
      "enabled": true,
      "priority": "medium",
      "promiseHandling": true,
      "errorBoundaries": true,
      "deadlockDetection": true,
      "concurrencyControl": true
    },
    "securityVulns": {
      "enabled": true,
      "priority": "critical",
      "autoSanitize": true,
      "validateInputs": true,
      "xssProtection": true,
      "sqlInjectionPrevention": true,
      "csrfProtection": true
    },
    "performanceIssues": {
      "enabled": false,
      "priority": "low",
      "inefficientAlgorithms": true,
      "memoryOptimization": true,
      "cacheImplementation": true
    },
    "errorHandling": {
      "enabled": true,
      "priority": "medium",
      "addTryCatch": true,
      "specificExceptions": true,
      "logErrors": true,
      "gracefulDegradation": true
    }
  },
  "safety": {
    "backupBeforeFix": true,
    "runTestsAfterFix": true,
    "rollbackOnTestFail": true,
    "maxFilesPerRun": 10,
    "requireUserConfirmation": false,
    "createPullRequest": false
  },
  "learning": {
    "enabled": true,
    "storePatterns": true,
    "adaptToProject": true,
    "suggestPreventions": true,
    "learnFromFeedback": true,
    "customRules": true
  },
  "testing": {
    "generateTestsForFixes": true,
    "runExistingTests": true,
    "performanceRegression": true,
    "securityRegression": true,
    "testTimeout": 30000
  },
  "analysis": {
    "staticAnalysis": true,
    "dynamicAnalysis": false,
    "flowAnalysis": true,
    "dataFlowTracking": true,
    "callGraphAnalysis": true
  },
  "reporting": {
    "detailedReport": true,
    "beforeAfterComparison": true,
    "confidenceScores": true,
    "suggestedImprovements": true,
    "preventionTips": true
  },
  "integrations": {
    "linters": {
      "eslint": true,
      "sonarqube": false,
      "codeql": false
    },
    "ide": {
      "vscode": true,
      "diagnostics": true,
      "quickFixes": true
    },
    "ci": {
      "preCommitHooks": true,
      "pullRequestChecks": true,
      "blockOnCritical": true
    }
  },
  "exclusions": {
    "files": ["*.test.js", "*.spec.ts", "node_modules/**"],
    "directories": ["test/", "tests/", "__tests__/", "coverage/"],
    "patterns": ["TODO:", "FIXME:", "HACK:"]
  }
} 