{
  "severity": "medio",
  "rules": {
    "javascript": true,
    "typescript": true,
    "react": true,
    "node": true,
    "performance": true,
    "security": true,
    "general": true
  },
  "exclude": [
    "node_modules",
    "dist",
    "build",
    "coverage",
    "*.test.js",
    "*.spec.js",
    "*.test.ts",
    "*.spec.ts",
    ".git",
    ".cache"
  ],
  "include": [
    "**/*.js",
    "**/*.ts",
    "**/*.jsx",
    "**/*.tsx",
    "**/*.vue",
    "**/*.json"
  ],
  "customPatterns": [
    {
      "pattern": "console\\.log\\(",
      "message": "Console.log detectado - considerar usar un logger",
      "severity": "bajo",
      "category": "desarrollo"
    },
    {
      "pattern": "TODO|FIXME|HACK",
      "message": "Comentario de desarrollo pendiente",
      "severity": "medio",
      "category": "general"
    }
  ],
  "thresholds": {
    "functionLength": 50,
    "fileLength": 500,
    "cyclomaticComplexity": 10,
    "duplicateLines": 5
  }
} 